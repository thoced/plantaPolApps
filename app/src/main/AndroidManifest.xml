<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.police.seraing.plantapolapps">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="18"/>

    <uses-feature android:name="android.hardware.camera" android:required="true" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NameNewDossierActivity"
            android:label="Name Dossier"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".LoadDossierActivity"
            android:label="Chargement dossiers"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".DossierActivity"
            android:label="Dossier"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".NewChambreActivity"
            android:label="New Chambre"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".ModifChambreActivity"
            android:label="Modif Chambre"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>


    </application>




</manifest>